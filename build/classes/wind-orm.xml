<?xml version="1.0" encoding="UTF-8" ?>
<dataSources url="http://www.tcin.cn">
	<!-- 【默认】 -->
	<dataSource id="default">
		<!-- 数据库驱动字符串 -->
		<driver>com.mysql.cj.jdbc.Driver</driver>
		<!-- 数据库连接字符串 -->
		 <url>jdbc:mysql://127.0.0.1:3306/wind-sso?serverTimezone=Asia/Shanghai&amp;useSSL=false</url> 
		<!-- 数据库名称（不填，则为自动获取） -->
		<!-- <dataBase>test</dataBase> -->
		<!-- 数据库用户名 -->
		<userName>root</userName>
		<!-- 数据库密码 -->
		<passWord>123456</passWord>
		<!-- 连接池最大保持连接数（为空或小于等于0，则为1个） -->
		<max>3</max>
		<!-- 初始化：连接数（最多初始化max数，为空或小于等于0，则为1个） -->
		<init>1</init>
		<!-- 数据库类型（mysql【默认】、sql server、oracle——不填，则自动获取） -->
		<!-- <type>mysql</type> -->
		<!-- 是否打印SQL -->
		<print_sql>false</print_sql>
		<!-- 执行SQL超时（单位：秒，默认为：30秒） -->
		<timeout></timeout>
		<!-- 生成、获取connection超时数（单位：秒，默认：5秒） -->
		<connectionTimeout></connectionTimeout>
		<!-- 空间时间；超过该数将关闭（单位：秒，默认：1800秒） -->
		<freeTime></freeTime>
		<!-- 缓存时间；超过该数将刷新，小于等于0则不刷新（单位：秒，默认：0秒）-->
		<cacheTime></cacheTime>
		<!-- 是否在执行SQL的时候，指定数据库名（默认：true） -->
		<isSpecifyDatabaseName>true</isSpecifyDatabaseName>
	</dataSource>
</dataSources>